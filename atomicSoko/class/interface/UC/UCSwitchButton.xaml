<UserControl x:Class="atomicSoko.UCSwitchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:atomicSoko"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="RecLogIn" Grid.Column="0" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="100" Fill="#FF00FFD6" MouseDown="RecLogIn_MouseDown"/>
        <Rectangle x:Name="RecSignUp" Grid.Column="1" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="100" Fill="#FF00FFD6" MouseDown="RecSignUp_MouseDown"/>
        <Label Grid.Column="0" Content="Sign In" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="RecLogIn_MouseDown"></Label>
        <Label Grid.Column="1" Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="RecSignUp_MouseDown"></Label>
    </Grid>
</UserControl>
